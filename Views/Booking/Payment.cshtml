@model demo.Models.OrderMasterTbl



@{
    ViewData["Title"] = "Payment";
}



<h1>Payment</h1>



<h4>Payment Details</h4>




<div class="row">
    <div class="col-md-4">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="OrderMasterId" />
            </div>
            <div class="form-group">
                <label asp-for="CardNo" class="control-label">Card Number</label>
                <input asp-for="CardNo" class="form-control" />
                <span asp-validation-for="CardNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">TotalAmount </label>
                <label asp-for="Amount" class="form-control">@Model.Amount</label>
                <input asp-for="Amount" hidden />

            </div>
            <div class="form-group">
                <label asp-for="Paid" class="control-label">Amount </label>
                <input asp-for="Paid" class="form-control" />
                <span asp-validation-for="Paid" class="text-danger"></span>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="text-danger">@ViewBag.ErrorMessage</div>
                }
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="OrderDate" />
            </div>
            
            <div class="form-group">
                <input type="hidden" asp-for="UserId" />
            </div>



           <div class="form-group">



               <input type="submit" value="Pay Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 